header.header
	.container
		.header__wrapper
			+button('', 'header__button-toggle header__button-toggle--closed header__button-toggle--open', 'button')
				span.visually-hidden Открыть меню
				
			if isIndexPage
				a.header__logo-link
					span.visually-hidden Логотип
					+inlineSvg('header__logo-icon', '137', '17', 'content_logistics-logo', '', '')
			else if !isIndexPage
				a.header__logo-link(href='./../index.html')
					span.visually-hidden Логотип
					+inlineSvg('header__logo-icon', '137', '17', 'content_logistics-logo', '', '')

			+button('', 'header__button-enter', 'button')
				span.visually-hidden Войти
			
			ul.header__mobile-nav-list
				li.header__mobile-nav-item.header__mobile-nav-item--home
					a.header__mobile-nav-link(href='./../index.html') Главная
				li.header__mobile-nav-item.header__mobile-nav-item--favorite
					a.header__mobile-nav-link(href='./../index.html') Избранное
				li.header__mobile-nav-item.header__mobile-nav-item--catalog
					a.header__mobile-nav-link(href='./../index.html') Каталог
				li.header__mobile-nav-item.header__mobile-nav-item--basket
					a.header__mobile-nav-link(href='./../index.html') Корзина
				li.header__mobile-nav-item.header__mobile-nav-item--profile
					a.header__mobile-nav-link(href='./../index.html') Профиль
			p.header__mobile-links Разделы
			a.header__mobile-faq(href='./../index.html') Перейти к Faq

			+menuMobileCategories(mobileMenuMain, currentPageID)

			nav.header__desktop-nav
				+menu(navHeader, 'navigation__list', 'navigation__item', '', currentPageID)
				
				if isIndexPage
					ul.navigation-icons__list.navigation-icons__main
						li.navigation-icons__item
							+inlineSvg('navigation-icons__notice', '20', '20', 'decors_notification-icon', 'none', 'red')
						li
							+inlineSvg('navigation-icons__search', '22', '22', 'decors_search-icon', 'none', 'green')
				else if isCatalogPage
					ul.navigation-icons__list.navigation-icons__catalog
						li
							+inlineSvg('user-icons__basket', '25', '24', 'svg-basket', 'none', 'black')
						li
							<svg width="25" height="25" fill="blue" viewBox="0 0 1024 1024" xmlns="http://www.w3.org/2000/svg"><path d="M512 896a42.667 42.667 0 01-30.293-12.373L150.187 551.68a224.427 224.427 0 010-315.733 223.573 223.573 0 01315.733 0l46.08 46.08 46.08-46.08a223.573 223.573 0 01315.733 0 224.427 224.427 0 010 315.733l-331.52 331.947A42.667 42.667 0 01512 896z"/></svg>
				
				include ./../sections/user-navigation-header.pug
				include ./../sections/mobile-navigation-main.pug
