section.adding-positions
	.adding-positions__wrapper
		h2.adding-positions__title Актуальные заказы
		form.adding-positions__form
			.form__header-wrapper
				ul.form_list
					li.form__item
						p.form__title Товары в каталоге
					li.form__item
						+button('Обувь', 'form-item-button', 'button')
					li.form__item
						+button('Верхняя одежда', 'form-item-button', 'button')
					li.form__item
						+button('Верх', 'form-item-button', 'button')
					li.form__item
						+button('Низ', 'form-item-button', 'button')
					li.form__item
						+button('Аксессуары', 'form-item-button', 'button')
					li.form__item
						+button('Выбрать все', 'form-item-button', 'button')
					li.form__item
						+button('Удалить выбранные', 'form-item-button', 'reset')
		.adding-positions__products
			ul.products__list
				li.products__items
					+checkbox('product-selection', 'checked', 'product-selection-id', 'Выбранный товар')
					h3.products__title Zion Williamson x Air Jordan 1 Retro Low OG "Voodoo"
					+link('products__button-edit', 'Редактировать', '#')
