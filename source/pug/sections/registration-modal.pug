div.registration-modal
	form(action="#" method='post' id="registration-form").registration-modal__form
		h2.registration-modal__title Регистрация
		label(class="registration-modal__label" for="name")
			span.registration-modal__label-text Имя Фамилия
			input(class="registration-modal__input" type="text" name="name" id="name" placeholder="Иван Иванов" required)
		label(class="registration-modal__label" for="email")
			span.registration-modal__label-text Ваш email
			input(class="registration-modal__input" type="email" name="email" id="email" placeholder="sobaka322@mail.ru" required)
		label(class="registration-modal__upload-image-label" for="image-upload")
			span.registration-modal__upload-image-text Добавить Фото
			input(class="registration-modal__input-image-upload" type="file" name="image-upload" id="image-upload")
		img(class="registration-modal__image-preview" src='' alt='Превью изображения' width='100' height='100')
		span.registration-modal__mesage Изображение не более 2 Мб
		+button('Отправить', 'registration-modal__button button', 'submit')
